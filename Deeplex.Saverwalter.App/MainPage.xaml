<Page
    x:Class="Deeplex.Saverwalter.App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Deeplex.Saverwalter.App"
    xmlns:mtuuc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:Deeplex.Saverwalter.App.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Name="AnhangTemplate" x:DataType="vm:AnhangDatei">
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <SymbolIcon Symbol="{x:Bind Symbol}"/>
                <TextBlock VerticalAlignment="Center" Text="{x:Bind Content}"/>
                <Button Background="Transparent">
                    <SymbolIcon Symbol="More"/>
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel>
                                <Button
                                    HorizontalAlignment="Stretch"
                                    Background="Transparent"
                                    Command="{x:Bind SaveFile}">
                                    <StackPanel Width="100" Orientation="Horizontal">
                                        <SymbolIcon Symbol="Save"/>
                                        <TextBlock Text=" Speichern"/>
                                    </StackPanel>
                                </Button>
                                <Button
                                    HorizontalAlignment="Stretch"
                                    Background="Transparent"
                                    Command="{x:Bind DeleteFile}">
                                    <StackPanel Width="100" Orientation="Horizontal">
                                        <SymbolIcon Symbol="Delete"/>
                                        <TextBlock Text=" Löschen"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Name="GroupTemplate" x:DataType="vm:AnhangTreeViewNode">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="{Binding Content}"/>
                <Button Margin="10,0,0,0" Background="Transparent">
                    <SymbolIcon Symbol="More"></SymbolIcon>
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel>
                                <Button
                                    Command="{Binding AttachFile}"
                                    Background="Transparent">
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Attach"/>
                                        <TextBlock Text=" Datei anhängen"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Name="RootTemplate" x:DataType="muxc:TreeViewNode">
            <TextBlock Text="{x:Bind Content}"/>
        </DataTemplate>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <NavigationView
            PaneDisplayMode="Left"
            x:Name="NavView"
            OpenPaneLength="160"
            AlwaysShowHeader="False"
            IsSettingsVisible="True"
            ItemInvoked="NavView_ItemInvoked"
            BackRequested="NavView_BackRequested"
            IsBackEnabled="{x:Bind AppFrame.CanGoBack, Mode=OneWay}">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    x:Name="KontaktListMenuItem"
                    Content="{x:Bind KontaktListLabel}"
                    Icon="ContactInfo"/>
                <NavigationViewItem
                    x:Name="WohnungListMenuItem"
                    Content="{x:Bind WohnungListLabel}" 
                    Icon="Street"/>
                <NavigationViewItem
                    x:Name="VertragListMenuItem"
                    Content="{x:Bind VertragListLabel}" 
                    Icon="Library"/>
                <NavigationViewItem
                    x:Name="BetriebskostenListMenuItem"
                    Content="{x:Bind BetriebskostenrechnungenListLabel}" 
                    Icon="List"/>
            </NavigationView.MenuItems>

            <NavigationView.PaneFooter>
                <StackPanel>
                    <!--TODO about?-->
                </StackPanel>
            </NavigationView.PaneFooter>
            <RelativePanel>
                <RelativePanel
                        RelativePanel.AlignRightWithPanel="True"
                        RelativePanel.AlignLeftWithPanel="True"
                        Background="{ThemeResource SystemChromeMediumColor}" x:Name="CommandBarPanel">
                    <TextBlock x:Name="MainTitel"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Margin="10,0,0,0"
                            Text="{x:Bind ViewModel.Titel.Value, Mode=TwoWay}" />
                    <CommandBar
                            Height="40"
                            x:Name="MainCommandBar"
                            DefaultLabelPosition="Right"
                            RelativePanel.LeftOf="MainPermaCommands">
                    </CommandBar>
                    <CommandBar
                            RelativePanel.AlignRightWithPanel="True"
                            x:Name="MainPermaCommands"
                            Background="Transparent"
                            IsOpen="False"
                            HorizontalAlignment="Stretch"
                            DefaultLabelPosition="Right">
                        <AppBarToggleButton
                                RelativePanel.AlignRightWithPanel="True"
                                x:Name="togglepane"
                                Click="togglepane_Click">
                            <SymbolIcon x:Name="togglepanesymbol" Symbol="ClosePane"/>
                        </AppBarToggleButton>
                    </CommandBar>
                </RelativePanel>
                <SplitView
                        RelativePanel.AlignRightWithPanel="True"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.Below="CommandBarPanel"
                        RelativePanel.AlignBottomWithPanel="True"
                        x:Name="splitview"
                        DisplayMode="Inline"
                        PanePlacement="Right"
                        PaneBackground="{StaticResource SystemChromeMediumColor}"
                        IsPaneOpen="False">
                    <SplitView.Content>
                        <Frame
                            Navigating="OnNavigatingToPage"
                            x:Name="frame"
                            Margin="10">
                            <Frame.ContentTransitions>
                                <TransitionCollection>
                                    <NavigationThemeTransition>
                                        <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                            <EntranceNavigationTransitionInfo />
                                        </NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                    </NavigationThemeTransition>
                                </TransitionCollection>
                            </Frame.ContentTransitions>
                        </Frame>
                    </SplitView.Content>
                    <SplitView.Pane>
                        <ScrollViewer>
                            <StackPanel>
                                <RelativePanel Padding="10,5,10,0">
                                    <TextBlock Margin="5,0,0,0" Style="{StaticResource SubtitleTextBlockStyle}" Text="Explorer" RelativePanel.AlignLeftWithPanel="True"/>
                                    <StackPanel
                                        RelativePanel.AlignRightWithPanel="True"
                                        Orientation="Horizontal">
                                        <ToggleButton
                                            Background="Transparent"
                                            Margin="0,0,5,0"
                                            IsChecked="{x:Bind Explorer.navigationSynced.Value}">
                                            <SymbolIcon Symbol="Sync"/>
                                        </ToggleButton>
                                        <Button
                                            Background="Transparent"
                                            Visibility="{x:Bind Explorer.notInSelection, Mode=OneWay}"
                                            Command="{x:Bind Explorer.SelectionMultilple}">
                                            <SymbolIcon Symbol="Download"/>
                                        </Button>
                                        <Button
                                        RelativePanel.AlignRightWithPanel="True"
                                        Visibility="{x:Bind Explorer.inSelection, Mode=OneWay}"
                                        Command="{x:Bind Explorer.SaveFiles}">
                                            <SymbolIcon Symbol="Save"/>
                                        </Button>
                                    </StackPanel>
                                </RelativePanel>
                                <MenuFlyoutSeparator/>
                                <muxc:TreeView x:Name="ExplorerTree"/>
                            </StackPanel>
                        </ScrollViewer>
                    </SplitView.Pane>
                </SplitView>
            </RelativePanel>
        </NavigationView>
        <mtuuc:InAppNotification
            x:Name="SavedIndicator"
            ShowDismissButton="False"
            HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Gespeichert"/>
                <SymbolIcon Margin="5,0,0,0" Symbol="Accept"/>
            </StackPanel>
        </mtuuc:InAppNotification>
    </Grid>
</Page>
