<UserControl
    x:Class="Deeplex.Saverwalter.App.UserControls.AddZaehlerstandControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Deeplex.Saverwalter.App.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Button
            Background="Transparent"
            x:Name="AddZaehlerButton">
            <SymbolIcon Symbol="Add"/>
            <Button.Flyout>
                <Flyout>
                    <StackPanel>
                        <DatePicker
                            Date="{x:Bind Datum, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                            Header="Datum" />
                        <TextBox
                            Text="{x:Bind ViewModel.Stand, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                            Header="Stand"/>
                        <Button
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            Click="AddZaehlerstand_Click"
                            Content="Bestätigen" />
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>
    </Grid>
</UserControl>
