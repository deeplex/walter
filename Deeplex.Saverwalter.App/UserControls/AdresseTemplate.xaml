<UserControl
    x:Class="Deeplex.Saverwalter.App.Views.AdresseTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid
        RelativePanel.AlignLeftWithPanel="True"
        RelativePanel.AlignRightWithPanel="True"
         RelativePanel.Below="Title">
        <RelativePanel>
            <TextBox
                Margin="20,20,0,0"
                Name="Strasse"
                Header="Straße"
                Width="210"
                Text="{x:Bind ViewModel.Strasse.Value, Mode=TwoWay}">
            </TextBox>
            <TextBox
                Margin="20,20,0,0"
                Name="Hausnummer"
                Header="Hausnr."
                Width="70"
                RelativePanel.RightOf="Strasse"
                Text="{x:Bind ViewModel.Hausnummer.Value, Mode=TwoWay}"/>
            <TextBox 
               Margin="20,20,0,0"
                Name="Postleizahl"
                Header="Postleitzahl"
                Width="70"
                RelativePanel.RightOf="Hausnummer"
                Text="{x:Bind ViewModel.Postleitzahl.Value, Mode=TwoWay}"/>
            <TextBox
                Margin="20,20,0,0"
                Name="Stadt"
                Header="Stadt"
                Width="210"
                RelativePanel.RightOf="Postleizahl"
                Text="{x:Bind ViewModel.Stadt.Value, Mode=TwoWay}"/>
        </RelativePanel>
    </Grid>
</UserControl>
