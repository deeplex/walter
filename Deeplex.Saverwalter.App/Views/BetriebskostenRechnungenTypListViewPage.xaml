<Page
    x:Class="Deeplex.Saverwalter.App.Views.BetriebskostenRechnungenTypListViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Deeplex.Saverwalter.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mtuuc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:vm="using:Deeplex.Saverwalter.App.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <muxc:StackLayout x:Name="VerticalStackLayout" Orientation="Vertical" Spacing="8"/>
    </Page.Resources>
    <ScrollViewer>
        <StackPanel>
            <CommandBar
            Background="Transparent"
            IsOpen="False"
            HorizontalAlignment="Stretch"
            DefaultLabelPosition="Right">
                <CommandBar.Content>
                    <TextBlock Text="Betriebskostenrechnungen"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Margin="10,0,0,0"/>
                </CommandBar.Content>
                <AppBarButton Icon="Sync" Label="Sortiere nach Gruppen" Click="SortiereNachGruppen_Click"/>
                <AppBarButton
                AllowFocusOnInteraction="True"
                Icon="Add" Label="Hinzufügen">
                    <AppBarButton.Flyout>
                        <Flyout>
                            <StackPanel>
                                <TextBlock Margin="0,0,0,20" Text="Füge Betriebskostenrechnung hinzu:" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <TextBlock Text="Betroffene Wohneinheiten:"/>
                                <muxc:TreeView SelectionMode="Multiple" x:Name="AddBetriebskostenrechnungBetroffeneWohneinheiten"/>
                                <TextBox Header="Beschreibung" x:Name="AddBetriebskostenrechnungBeschreibung" HorizontalAlignment="Stretch"/>
                                <StackPanel Orientation="Horizontal">
                                    <ComboBox Header="Kostentyp" x:Name="AddBetriebskostenrechnungTyp" ItemsSource="{x:Bind ViewModel.Betriebskostentypen}" DisplayMemberPath="Beschreibung"/>
                                    <ComboBox Header="Umlageschlüssel" x:Name="AddBetriebskostenrechnungSchluessel" ItemsSource="{x:Bind ViewModel.Betriebskostenschluessel}" DisplayMemberPath="Beschreibung" Margin="10,0,0,0"/>
                                    <muxc:NumberBox Header="Betr. Jahr" x:Name="AddBetriebskostenrechnungJahr" Margin="10,0,0,0" SpinButtonPlacementMode="Inline"/>
                                </StackPanel>
                                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                    <CalendarDatePicker x:Name="AddBetriebskostenrechnungDatum" Header="Datum"/>
                                    <muxc:NumberBox x:Name="AddBetriebskostenrechnungBetrag" Margin="10,0,0,0" Header="Betrag"/>
                                    <Button IsEnabled="False" VerticalAlignment="Bottom" Margin="10,0,0,0">
                                        <SymbolIcon Symbol="Attach"/>
                                    </Button>
                                    <Button VerticalAlignment="Bottom" Margin="10,0,0,0" Click="AddBetriebskostenrechnung_Click">
                                        <SymbolIcon Symbol="Add"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar>

            <muxc:ItemsRepeater
            Layout="{StaticResource VerticalStackLayout}"
            ItemsSource="{x:Bind ViewModel.Typen.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <DataTemplate>
                    <Grid>
                        <mtuuc:Expander Header="{Binding Key.Beschreibung}">
                            <RelativePanel>
                                <Pivot ItemsSource="{Binding Value.Jahre, Mode=OneWay}">
                                    <Pivot.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Key, Mode=OneWay}"/>
                                        </DataTemplate>
                                    </Pivot.HeaderTemplate>
                                    <Pivot.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <GridView Margin="0,10,0,0" ItemsSource="{Binding Value, Mode=OneWay}">
                                                    <CollectionViewSource x:Name="Wohnungen" IsSourceGrouped="True"/>
                                                    <GridView.ItemTemplate>
                                                        <DataTemplate x:DataType="vm:BetriebskostenRechnungenRechnung">
                                                            <StackPanel Width="250" BorderBrush="LightGray" BorderThickness="2" Padding="5">
                                                                <RelativePanel>
                                                                    <TextBlock
                                                                        Margin="5"
                                                                        FontSize="18">
                                                                        <Run Text="Betrag:"/>
                                                                        <Run Text="{x:Bind BetragString}"/>
                                                                    </TextBlock>
                                                                    <Button
                                                                        RelativePanel.AlignRightWithPanel="True"
                                                                        Background="Transparent"
                                                                        Command="{x:Bind AttachFile}">
                                                                        <SymbolIcon Symbol="Attach"/>
                                                                    </Button>
                                                                </RelativePanel>
                                                                <TextBlock
                                                                    Margin="5"
                                                                    FontSize="18">
                                                                    <Run Text="Datum:"/>
                                                                    <Run Text="{x:Bind DatumString}"/>
                                                                </TextBlock>
                                                                <ListView
                                                                    SelectionMode="Single"
                                                                    ItemsSource="{x:Bind Wohnungen, Mode=OneWay}">
                                                                    <ListView.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <ListViewItem>
                                                                                <TextBlock TextWrapping="Wrap" Text="{Binding}"/>
                                                                            </ListViewItem>
                                                                        </DataTemplate>
                                                                    </ListView.ItemTemplate>
                                                                </ListView>
                                                                <!--<mtuuc:Expander>
                                                                    <mtuuc:Expander.Header>
                                                                        <TextBlock>
                                                                    <Run Text="Wohnungen ("/>
                                                                    <Run Text="{x:Bind Wohnungen.Count}"/>
                                                                    <Run Text=")"/>
                                                                        </TextBlock>
                                                                    </mtuuc:Expander.Header>
                                                                    <ListView
                                                                        SelectionMode="None"
                                                                        ItemsSource="{x:Bind Wohnungen, Mode=OneWay}">
                                                                        <ListView.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <TextBlock Text="Test"/>
                                                                            </DataTemplate>
                                                                        </ListView.ItemTemplate>
                                                                    </ListView>
                                                                </mtuuc:Expander>-->
                                                                <Button CommandParameter="{x:Bind}" Click="SaveGruppe_Click" HorizontalAlignment="Stretch" Visibility="{x:Bind hasNoEntity}">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="Speichern"/>
                                                                        <SymbolIcon Margin="10,0,0,0" Symbol="Accept"/>
                                                                    </StackPanel>
                                                                </Button>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </GridView.ItemTemplate>
                                                </GridView>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Pivot.ItemTemplate>
                                </Pivot>
                                <Button Margin="0,10,10,0" RelativePanel.AlignRightWithPanel="True" Content="Neues Jahr" Click="NeuesJahr_Click"/>
                            </RelativePanel>
                        </mtuuc:Expander>
                    </Grid>
                </DataTemplate>
            </muxc:ItemsRepeater>
        </StackPanel>
    </ScrollViewer>
</Page>
