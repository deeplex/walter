<Page
    x:Class="Deeplex.Saverwalter.App.Views.Rechnungen.ErhaltungsaufwendungenDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mtuuc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <ComboBox
            Header="Wohnung"
            SelectedItem="{x:Bind ViewModel.Wohnung, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
            Margin="20,20,0,0"
            PlaceholderText="Wohnung..."
            MinWidth="300"
            ItemsSource="{x:Bind ViewModel.Wohnungen}"/>
        <ComboBox
            Header="Aussteller"
            SelectedItem="{x:Bind ViewModel.Aussteller, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
            Margin="20,20,0,0"
            PlaceholderText="Aussteller..."
            MinWidth="300"
            ItemsSource="{x:Bind ViewModel.Personen}"/>
        <TextBox Text="{x:Bind ViewModel.Bezeichnung, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
        <DatePicker Date="{x:Bind ViewModel.Datum, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
    </StackPanel>
</Page>
