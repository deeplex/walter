<Page
    x:Class="Deeplex.Saverwalter.App.Views.VertragDetailViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Deeplex.Saverwalter.App.Views"
    xmlns:mtuuc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:vm="using:Deeplex.Saverwalter.App.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Name="Eintraege" TargetType="TextBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="Margin" Value="20,20,0,0"/>
        </Style>

        <DataTemplate x:Key="Mieter" x:DataType="vm:VertragDetailMieter">
            <mtuuc:DockPanel LastChildFill="False">
                <TextBlock Text="{x:Bind Name.Value}"  VerticalAlignment="Center" Margin="10,0,0,0"/>
                <Button
                    CommandParameter="{x:Bind Id}"
                    Click="RemoveMieter_Click"
                    mtuuc:DockPanel.Dock="Right"
                    Background="Transparent"
                    Margin="10,0,0,0">
                    <SymbolIcon Symbol="Cancel" />
                </Button>
            </mtuuc:DockPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <ScrollViewer>
            <RelativePanel>
                <TextBlock x:Name="Title"
                Style="{StaticResource TitleTextBlockStyle}"
                Margin="10,0,0,0"
                Text="Vertragdetails"/>

                <CommandBar
                x:Name="ButtonRow"
                Background="Transparent"
                IsOpen="False"
                RelativePanel.AlignRightWithPanel="True"
                HorizontalAlignment="Stretch"
                DefaultLabelPosition="Right">
                    <AppBarButton
                    Icon="Edit"
                    Label="Edit"/>
                    <AppBarButton Icon="Delete" Label="Delete"/>
                    <AppBarButton
                    Icon="Save"
                    Label="Save"/>
                    <CommandBar.SecondaryCommands>
                        <AppBarButton Icon="Setting" Label="Settings">
                            <AppBarButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="I" />
                            </AppBarButton.KeyboardAccelerators>
                        </AppBarButton>
                    </CommandBar.SecondaryCommands>
                </CommandBar>


                <TextBlock
                    x:Name="LaufzeitLabel"
                    RelativePanel.Below="ButtonRow"
                    Width="70"
                    Margin="20,45,0,0"
                    Text="Laufzeit:"/>

                <CalendarDatePicker
                    x:Name="Beginn" Header="Beginn"
                    Margin="20,20,0,0"
                    Width="190"
                    RelativePanel.Below="ButtonRow"
                    RelativePanel.RightOf="LaufzeitLabel"
                    Date="{x:Bind ViewModel.Beginn.Value}"
                    Language="de"
                    PlaceholderText="Wähle ein Datum"
                    DateFormat="{}{day.integer}. {month.full} {year.full}"/>

                <CalendarDatePicker
                    x:Name="Ende" Header="Ende"
                    Margin="20,20,0,0"
                    Width="190"
                    RelativePanel.Below="ButtonRow"
                    RelativePanel.RightOf="Beginn"
                    PlaceholderText="Offen"
                    Language="de"
                    Date="{x:Bind ViewModel.Ende.Value}"
                    DateFormat="{}{day.integer}. {month.full} {year.full}" />

                <TextBlock
                    x:Name="VermieterLabel"
                    RelativePanel.Below="Ende"
                    Width="70"
                    Margin="20,20,0,0"
                    Text="Vermieter:"/>
                <AutoSuggestBox
                    x:Name="VermieterSuggest"
                    Margin="20,15,0,0"
                    MinWidth="400"
                    Text="{x:Bind ViewModel.Vermieter.Value.Name.Value}"
                    PlaceholderText="Vermieter hinzufügen"
                    RelativePanel.Below="Ende"
                    RelativePanel.RightOf="VermieterLabel"
                    QuerySubmitted="VermieterSuggest_QuerySubmitted"
                    ItemsSource="{x:Bind ViewModel.JuristischePersonen.Value, Mode=OneWay}"
                    TextChanged="VermieterSuggest_TextChanged"/>

                <TextBlock
                    x:Name="MieterLabel"
                    RelativePanel.Below="VermieterLabel"
                    Width="70"
                    Margin="20,20,0,0"
                    Text="Mieter:"/>
                <mtuuc:AdaptiveGridView
                    Margin="20,10,0,0"
                    SelectionMode="Single"
                    x:Name="MieterListe"
                    VerticalAlignment="Center"
                    RelativePanel.Below="VermieterLabel"
                    RelativePanel.RightOf="MieterLabel"
                    ItemsSource="{x:Bind ViewModel.Mieter.Value, Mode=OneWay}"
                    ItemTemplate="{StaticResource Mieter}"/>
                <AutoSuggestBox
                    x:Name="KontaktSuggest"
                    Margin="0,15,0,0"
                    QueryIcon="AddFriend"
                    MinWidth="200"
                    PlaceholderText="Mieter hinzufügen..."
                    RelativePanel.Below="VermieterLabel"
                    RelativePanel.RightOf="MieterListe"
                    QuerySubmitted="KontaktSuggest_QuerySubmitted"
                    TextChanged="KontaktSuggest_TextChanged"
                    ItemsSource="{x:Bind ViewModel.Kontakte.Value, Mode=OneWay}"/>

                <TextBlock
                    x:Name="WohnungLabel"
                    RelativePanel.Below="MieterLabel"
                    Width="70"
                    Margin="20,20,0,0"
                    Text="Wohnung:"/>
                <AutoSuggestBox
                    x:Name="WohnungSuggest"
                    Margin="20,15,0,0"
                    MinWidth="400"
                    Text="{x:Bind ViewModel.Wohnung.Value.BezeichnungVoll.Value}"
                    PlaceholderText="Wohnung hinzufügen"
                    RelativePanel.Below="MieterLabel"
                    RelativePanel.RightOf="WohnungLabel"
                    ItemsSource="{x:Bind ViewModel.AlleWohnungen.Value, Mode=OneWay}"
                    TextChanged="WohnungSuggest_TextChanged"/>


                <mtuuc:DataGrid
                    x:Name="VersionenGrid"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"
                    Margin="20,20,20,20"
                    RelativePanel.Below="WohnungSuggest"
                    IsReadOnly="True"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="True"
                    AutoGenerateColumns="False"
                    ItemsSource="{x:Bind ViewModel.Versionen.Value}">
                    <mtuuc:DataGrid.Columns>
                        <mtuuc:DataGridTextColumn
                            Header="Beginn"
                            Tag="Beginn"
                            Binding="{Binding BeginnString.Value}"/>
                        <mtuuc:DataGridTextColumn
                            Header="Ende"
                            Tag="Ende"
                            Binding="{Binding EndeString.Value}"/>
                        <mtuuc:DataGridTextColumn
                            Header="Personenzahl"
                            Tag="Personenzahl"
                            Binding="{Binding Personenzahl.Value}"/>
                    </mtuuc:DataGrid.Columns>
                </mtuuc:DataGrid>

                <TextBlock
                    RelativePanel.Below="VersionenGrid"
                    Name="KalteBetriebskostenTitle"
                    Margin="10"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Kalte Betriebskosten"/>
                <mtuuc:DataGrid
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"
                    Margin="20,20,20,20"
                    x:Name="KalteBetriebskostenGrid"
                    RelativePanel.Below="KalteBetriebskostenTitle"
                    IsReadOnly="True"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="True"
                    AutoGenerateColumns="False"
                    ItemsSource="{x:Bind ViewModel.KalteBetriebskosten.Value}">
                    <mtuuc:DataGrid.Columns>
                        <mtuuc:DataGridTextColumn
                            Header="Bezeichnung"
                            Tag="Bezeichnung"
                            Binding="{Binding Bezeichnung.Value}"/>
                        <mtuuc:DataGridTextColumn
                            Header="Schlüssel"
                            Tag="Schluessel"
                            Binding="{Binding Schluessel.Value}"/>
                        <mtuuc:DataGridTextColumn
                            Header="Anteil"
                            Tag="Anteil"
                            Binding="{Binding Anteil.Value}"/>
                    </mtuuc:DataGrid.Columns>
                    <mtuuc:DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock
                                    TextWrapping="Wrap"
                                    Margin="20,20,20,20"
                                    Text="{Binding Beschreibung.Value}"/>
                            </Grid>
                        </DataTemplate>
                    </mtuuc:DataGrid.RowDetailsTemplate>
                </mtuuc:DataGrid>
            </RelativePanel>
        </ScrollViewer>
    </Grid>
</Page>
