<Page
    x:Class="Deeplex.Saverwalter.App.Views.WohnungDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Deeplex.Saverwalter.App.Views"
    xmlns:vm="using:Deeplex.Saverwalter.App.ViewModels"
    xmlns:mtuuc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Name="Eintraege" TargetType="TextBox">
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="Margin" Value="20,20,0,0"/>
            <Setter Property="IsEnabled" Value="{x:Bind ViewModel.IsInEdit.Value, Mode=OneWay}"/>
        </Style>

        <DataTemplate x:Key="BeginnGrid" x:DataType="vm:WohnungDetailVertrag">
            <CalendarDatePicker
                IsEnabled="False"
                Width="176"
                Date="{x:Bind Beginn.Value, Mode=OneWay}"
                Language="de"
                PlaceholderText="Offen"
                DateFormat="{}{day.integer}. {month.full} {year.full}"/>
        </DataTemplate>

        <DataTemplate x:Key="EndeGrid" x:DataType="vm:WohnungDetailVertrag">
            <CalendarDatePicker
                IsEnabled="False"
                Width="176"
                Date="{x:Bind Ende.Value, Mode=OneWay}"
                Language="de"
                PlaceholderText="Offen"
                DateFormat="{}{day.integer}. {month.full} {year.full}"/>
        </DataTemplate>
    </Page.Resources>
    <ScrollViewer>
        <StackPanel>
            <RelativePanel>
                <!--TODO Insert image -->
                <mtuuc:ScrollHeader
                    x:Name="ScrollHeader"
                    HorizontalAlignment="Stretch"
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.AlignLeftWithPanel="True"
                    Mode="Fade">
                    <Grid
                    Background="{ThemeResource SystemChromeLowColor}"
                    MinHeight="250">
                        <TextBlock x:Name="Title"
                        Style="{StaticResource TitleTextBlockStyle}"
                        Margin="10,0,0,0">
                        <Run Text="{x:Bind ViewModel.Anschrift.Value}"/>
                        <Run Text=" - "/>
                        <Run Text="{x:Bind ViewModel.Bezeichnung.Value}"/>
                        </TextBlock>
                    </Grid>
                </mtuuc:ScrollHeader>
                <CommandBar
                    x:Name="ButtonRow"
                    Background="Transparent"
                    IsOpen="False"
                    RelativePanel.AlignRightWithPanel="True"
                    HorizontalAlignment="Stretch"
                    DefaultLabelPosition="Right">
                    <AppBarButton Icon="Edit" Label="Edit" Command="{x:Bind ViewModel.BeginEdit}"/>
                    <AppBarButton Icon="Delete" Label="Delete"/>
                    <AppBarButton Icon="Save" Label="Save" Command="{x:Bind ViewModel.SaveEdit}"/>
                    <CommandBar.SecondaryCommands>
                        <AppBarButton Icon="Setting" Label="Settings">
                            <AppBarButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="I" />
                            </AppBarButton.KeyboardAccelerators>
                        </AppBarButton>
                    </CommandBar.SecondaryCommands>
                </CommandBar>
            </RelativePanel>
            <StackPanel Orientation="Horizontal">
            <TextBox
                Text="{x:Bind ViewModel.Besitzer.Value.Name.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Header="Besitzer" Width="300" Style="{StaticResource Eintraege}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox
                    Text="{x:Bind ViewModel.Adresse.Value.Strasse.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Header="Straße" Width="210" Style="{StaticResource Eintraege}"/>
                <TextBox
                    Text="{x:Bind ViewModel.Adresse.Value.Hausnummer.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Header="Hausnr." Width="70" Style="{StaticResource Eintraege}"/>
                <TextBox
                    Text="{x:Bind ViewModel.Adresse.Value.Postleitzahl.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Header="Postleitzahl" Width="70" Style="{StaticResource Eintraege}"/>
                <TextBox
                    Text="{x:Bind ViewModel.Adresse.Value.Stadt.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Header="Stadt" Width="210" Style="{StaticResource Eintraege}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
            <TextBox
                Text="{x:Bind ViewModel.Bezeichnung.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Header="Bezeichnung" Width="210" Style="{StaticResource Eintraege}"/>
            <TextBox
                Text="{x:Bind ViewModel.Wohnflaeche.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Header="Wohnfl." Width="70" Style="{StaticResource Eintraege}"/>
                <TextBox
                Text="{x:Bind ViewModel.Nutzflaeche.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Header="Nutzfl." Width="70" Style="{StaticResource Eintraege}"/>
            </StackPanel>

            <TextBlock Text="Zähler" Margin ="10" Style="{StaticResource SubtitleTextBlockStyle}"/>

            <GridView
                IsItemClickEnabled="True"
                SelectionMode="Single"
                Margin="10"
                ItemsSource="{x:Bind ViewModel.Zaehler.Value, Mode=OneWay}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="vm:WohnungDetailZaehler">
                        <Button
                    Width="200" Height="100"
	                Background="{ThemeResource SystemChromeLowColor}">
                            <Button.Content>
                                <StackPanel>
                                    <TextBlock Text="{x:Bind Typ.Value}"/>
                                    <TextBlock Text="{x:Bind Kennnummer.Value}"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <TextBlock Text="Verträge" Margin ="10" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <RelativePanel>
                <mtuuc:DataGrid
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"
                    Margin="20,20,20,20"
                     IsReadOnly="True"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="True"
                    AutoGenerateColumns="False"
                    IsEnabled="{x:Bind ViewModel.IsNotInEdit, Mode=OneWay}"
                    ItemsSource="{x:Bind ViewModel.Vertraege.Value}">
                     <mtuuc:DataGrid.Columns>
                        <mtuuc:DataGridTemplateColumn Header="Beginn" CellTemplate="{StaticResource BeginnGrid}"/>
                        <mtuuc:DataGridTemplateColumn Header="Ende" CellTemplate="{StaticResource EndeGrid}"/>
                         <mtuuc:DataGridTextColumn Header="Mieter" Binding="{Binding AuflistungMieter.Value}"/>
                     </mtuuc:DataGrid.Columns>
                </mtuuc:DataGrid>
            </RelativePanel>

            <TextBlock
                Margin="10"
                Style="{StaticResource SubtitleTextBlockStyle}"
                Text="Kalte Betriebskosten"/>
            <RelativePanel>
                <mtuuc:DataGrid
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                Margin="20,20,20,20"
                IsReadOnly="True"
                CanUserReorderColumns="False"
                CanUserResizeColumns="True"
                AutoGenerateColumns="False"
                IsEnabled="{x:Bind ViewModel.IsNotInEdit, Mode=OneWay}"
                ItemsSource="{x:Bind ViewModel.KalteBetriebskosten.Value}">
                    <mtuuc:DataGrid.Columns>
                        <mtuuc:DataGridTextColumn Header="Bezeichnung" Binding="{Binding Bezeichnung.Value}"/>
                        <mtuuc:DataGridTextColumn Header="Schlüssel" Binding="{Binding Schluessel.Value}"/>
                        <mtuuc:DataGridTextColumn Header="Anteil" Binding="{Binding Anteil.Value}"/>
                    </mtuuc:DataGrid.Columns>
                    <mtuuc:DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock
                                TextWrapping="Wrap"
                                Margin="20,20,20,20"
                                Text="{Binding Beschreibung.Value}"/>
                            </Grid>
                        </DataTemplate>
                    </mtuuc:DataGrid.RowDetailsTemplate>
                </mtuuc:DataGrid>
            </RelativePanel>
        </StackPanel>
    </ScrollViewer>
</Page>
