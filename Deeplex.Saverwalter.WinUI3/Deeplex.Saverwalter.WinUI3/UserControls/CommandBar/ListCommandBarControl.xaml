<UserControl
    x:Class="Deeplex.Saverwalter.WinUI3.UserControls.ListCommandBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Deeplex.Saverwalter.WinUI3.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <CommandBar>
        <CommandBar.PrimaryCommands>
            <AppBarElementContainer VerticalContentAlignment="Center">
                <TextBox
                    Text="{x:Bind ViewModel.Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Width="300" PlaceholderText="Filter..."/>
            </AppBarElementContainer>
            <AppBarButton Label="Element hinzufügen" Icon="Add" Command="{x:Bind ViewModel.Add, Mode=OneWay}"/>
        </CommandBar.PrimaryCommands>
    </CommandBar>
</UserControl>
