<UserControl
    x:Class="Deeplex.Saverwalter.WinUI3.UserControls.ExpanderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mtuuc="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <mtuuc:Expander
        IsExpanded="{x:Bind IsExpanded}"
        HorizontalContentAlignment="Stretch">
        <mtuuc:Expander.Header>
            <mtuuc:WrapPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="{x:Bind Header}" />
                <Button
                    Visibility="{x:Bind ClickAvailable}"
                    Background="Transparent"
                    Margin="10,0,0,0"
                    Click="{x:Bind ClickWrap}">
                    <SymbolIcon Symbol="Add" />
                </Button>
                <ContentPresenter
                    Visibility="{x:Bind BonusAvailable}"
                    Content="{x:Bind Bonus}" />
            </mtuuc:WrapPanel>
        </mtuuc:Expander.Header>
        <ContentPresenter Padding="0,0,0,20" Content="{x:Bind MainContent}" />
    </mtuuc:Expander>
</UserControl>
