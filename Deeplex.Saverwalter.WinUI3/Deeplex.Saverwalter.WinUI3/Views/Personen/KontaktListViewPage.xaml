<Page
    x:Class="Deeplex.Saverwalter.WinUI3.Views.KontaktListViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:Deeplex.Saverwalter.WinUI3.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <uc:KontaktListControl
        Vermieter="{x:Bind ViewModel.Vermieter.Value, Mode=TwoWay}"
        Mieter="{x:Bind ViewModel.Mieter.Value, Mode=TwoWay}"
        Handwerker="{x:Bind ViewModel.Handwerker.Value, Mode=TwoWay}"
        Filter="{x:Bind ViewModel.Filter.Value, Mode=OneWay}"/>
</Page>
